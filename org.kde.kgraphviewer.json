{
    "id": "org.kde.kgraphviewer",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kgraphviewer",
    "rename-icon": "kgraphviewer",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS",
                "./b2 install"
            ],
            "cleanup": [
                "/lib/libboost_*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://archives.boost.io/release/1.88.0/source/boost_1_88_0.tar.bz2",
                    "sha256": "46d9d2c06637b219270877c9e16155cbd015b6dc84349af064c088e9b5b12f7b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "stable-only": true,
                        "url-template": "https://archives.boost.io/release/$version/source/boost_${major}_${minor}_$patch.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "graphviz",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/13.1.2/graphviz-13.1.2.tar.xz",
                    "sha256": "2229ae9265eb51967841fb43c150dd253f26f51ab5c854ce103f665aaf948b1e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1249,
                        "stable-only": true,
                        "url-template": "https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/$version/graphviz-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kgraphviewer",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -Dm0644 logo.png /app/share/icons/hicolor/128x128/apps/org.kde.kgraphviewer.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kgraphviewer/2.5.0/kgraphviewer-2.5.0.tar.xz",
                    "sha256": "872bee63fb4df6f7fb2b4eaf02ff825cba3ca953ac02509a287fe5cd0f1e2b69",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 17741,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kgraphviewer/$version/kgraphviewer-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
